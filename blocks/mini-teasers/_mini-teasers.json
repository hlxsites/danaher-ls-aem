            "template": {
              "columns": { "$ref": "columns" },
              "items": { "$ref": "items" }
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "mini-teasers",
      "fields": [
        {
          "component": "select",
          "name": "columns",
          "label": "Number of Grid Columns",
          "valueType": "string",
