{
  "definitions": [
    {
      "title": "Form",
      "id": "form",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Form",
              "model": "form",
              "fields": "{{fields}}"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "form",
      "fields": [
        {
          "label": "Form Title",
          "name": "formTitle",
          "component": "text",
          "valueType": "string",
          "value": "Talk to an Expert"
        },
        {
          "label": "Success URL",
          "name": "successUrl",
          "component": "text",
          "valueType": "string",
          "value": "https://stage.lifesciences.danaher.com/us/en/solutions/mabs/cell-line-development.html"
        },
        {
          "label": "Error URL",
          "name": "errorUrl",
          "component": "text",
          "valueType": "string",
          "value": "https://help.salesforce.com/s/articleView?id=sf.mc_es_demanager.htm"
        },
        {
          "label": "Fields",
          "name": "fields",
          "component": "array",
          "type": "array",                    
          "minItems": 1,
          "maxItems": 20,
          "items": {
            "type": "object",                  
            "fields": [
              {
                "label": "Label",
                "name": "label",
                "component": "text",
                "valueType": "string",
                "value": ""
              },
              {
                "label": "Field Name",
                "name": "name",
                "component": "text",
                "valueType": "string",
                "value": ""
              },
              {
                "label": "Type",
                "name": "type",
                "component": "select",
                "options": [
                  { "name": "Text", "value": "text" },
                  { "name": "Email", "value": "email" },
                  { "name": "Phone", "value": "tel" },
                  { "name": "Textarea", "value": "textarea" },
                  { "name": "Select", "value": "select" },
                  { "name": "Checkbox", "value": "checkbox" },
                  { "name": "Hidden", "value": "hidden" }
                ],
                "valueType": "string",
                "value": "text"
              },
              {
                "label": "Required",
                "name": "required",
                "component": "checkbox",
                "valueType": "boolean",
                "value": false
              },
              {
                "label": "Options (for select)",
                "name": "options",
                "component": "textarea",
                "valueType": "string",
                "value": ""
              }
            ]
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "form",
      "components": [
        "formTitle",
        "successUrl",
        "errorUrl",
        "fields"
      ]
    },
    {
      "id": "fields",
      "components": [
        "label",
        "name",
        "type",
        "required",
        "options"
      ]
    }
  ]
}