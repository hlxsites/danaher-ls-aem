{
  "definitions": [
    {
      "title": "Form",
      "id": "form",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Form",
              "model": "form",
              "fields": "{{fields}}"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "form",
      "fields": [
        {
          "title": "Form Title",
          "id": "formTitle",
          "component": "text",
          "valueType": "string",
          "value": "Talk to an Expert"
        },
        {
          "title": "Success URL",
          "id": "successUrl",
          "component": "text",
          "valueType": "string",
          "value": "https://stage.lifesciences.danaher.com/us/en/solutions/mabs/cell-line-development.html"
        },
        {
          "title": "Error URL",
          "id": "errorUrl",
          "component": "text",
          "valueType": "string",
          "value": "https://help.salesforce.com/s/articleView?id=sf.mc_es_demanager.htm"
        },
        {
          "title": "Fields",
          "id": "fields",
          "component": "group",
          "repeat": {
            "min": 1,
            "max": 20
          },
          "fields": [
            {
              "title": "Label",
              "id": "label",
              "component": "text",
              "valueType": "string",
              "value": ""
            },
            {
              "title": "Field Name",
              "id": "name",
              "component": "text",
              "valueType": "string",
              "value": ""
            },
            {
              "title": "Type",
              "id": "type",
              "component": "select",
              "options": [
                { "name": "Text", "value": "text" },
                { "name": "Email", "value": "email" },
                { "name": "Phone", "value": "tel" },
                { "name": "Textarea", "value": "textarea" },
                { "name": "Select", "value": "select" },
                { "name": "Checkbox", "value": "checkbox" },
                { "name": "Hidden", "value": "hidden" }
              ],
              "valueType": "string",
              "value": "text"
            },
            {
              "title": "Required",
              "id": "required",
              "component": "checkbox",
              "valueType": "boolean",
              "value": false
            },
            {
              "title": "Options (for select)",
              "id": "options",
              "component": "textarea",
              "valueType": "string",
              "value": ""
            }
          ]
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "form",
      "components": [
        "formTitle",
        "successUrl",
        "errorUrl",
        "fields"
      ]
    },
    {
      "id": "fields",
      "components": [
        "label",
        "name",
        "type",
        "required",
        "options"
      ]
    }
  ]
}