{
  "definitions": [
    {
      "title": "Columns",
      "id": "columns",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/columns/v1/columns",
            "template": {
              "class": { "$ref": "classes" },
              "rows": { "$ref": "rows" }
            }
          }
        }
      }
    },
    {
      "title": "Column",
      "id": "column",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/columns/v1/column",
            "template": {
              "content": { "$ref": "columnContent" }
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "columns",
      "fields": [
        {
          "component": "select",
          "name": "rows",
          "label": "Number of Columns",
          "valueType": "string",
          "default": "2",
          "options": [
            { "name": "2 Columns", "value": "2" },
            { "name": "3 Columns", "value": "3" }
          ]
        },
        {
          "component": "multiselect",
          "name": "classes",
          "label": "Select Ratio (only for 2 columns)",
          "valueType": "string",
          "default": "fiftyfifty",
          "options": [
            { "name": "70/30 Split", "value": "seventythirty" },
            { "name": "30/70 Split", "value": "thirtyseventy" }
          ],
          "condition": {
            "field": "rows",
            "equals": "2"
          }
        }
      ]
    },
    {
      "id": "columnContent",
      "fields": [
        {
          "component": "embed",
          "name": "embedBlock",
          "label": "Embed Block",
          "valueType": "string"
        },
        {
          "component": "form",
          "name": "formBlock",
          "label": "Form Block",
          "valueType": "string"
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "columns",
      "components": ["column"]
    },
    {
      "id": "column",
      "components": [
        "text",
        "image",
        "button",
        "title",
        "article-info-new",
        "embed",
        "form"
      ]
    }
  ]
}