{
  "definitions": [
    {
      "title": "Columns",
      "id": "columns",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/columns/v1/columns",
            "template": {
              "class": { "$ref": "classes" },
              "rows": { "$ref": "rows" }
            }
          }
        }
      }
    },
    {
      "title": "Column",
      "id": "column",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/column/v1/column",
