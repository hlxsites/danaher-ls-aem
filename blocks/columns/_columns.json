          }
        }
      }
    }  
  ],
  "models": [
    {
      "id": "columns",
      "fields": [
        {
          "component": "select",
          "name": "rows",
          "label": "Number of Columns",
          "valueType": "string",
          "default": "2",
          "options": [
            { "name": "2 Columns", "value": "2" },
            { "name": "3 Columns", "value": "3" }
          ]
        },
        {
          "component": "multiselect",
          "name": "classes",
          "label": "Select Ratio (only for 2 columns)",
          "valueType": "string",
          "default": "fiftyfifty",
          "options": [
            { "name": "70/30 Split", "value": "seventythirty" },
            { "name": "30/70 Split", "value": "thirtyseventy" }
          ],
          "condition": {
            "field": "rows",
            "equals": "2"
          }
        },
        {
          "id": "column",
          "fields": [
            {
              "component": "embed",
              "name": "embedCode",
              "label": "Embed Code",
              "valueType": "string"
            }
          ]
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "columns",
